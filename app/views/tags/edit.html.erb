<% content_for(:title, "Edit Tag | TrailFinder") %>

<h2>Edit <%= @tag.name %></h2>
<%= render("layouts/errors", object: @tag) %>

<form action="/tags/<%= @tag.slug %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <%= render("form") %>
  </br>
  <button>Update Tag</button>
</form>
