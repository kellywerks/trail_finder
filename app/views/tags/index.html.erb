<% content_for(:title, "All Tags | TrailFinder") %>

<h1>Trail Tags</h1>

<ul>
  <% @tags.each do |tag| %>
    <li><a href="tags/<%= tag.slug %>"><%= tag.name %></a></li>
  <% end %>
</ul>

<h2>Add a Tag</h2>
<%= render("layouts/errors", object: @tag) %>

<form action="/tags/<%= @tag.slug %>" method="post">
  <%= render("form") %>
  </br>
  <button>Create Tag</button>
</form>
